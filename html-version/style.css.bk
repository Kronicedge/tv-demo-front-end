/* Shared styles */

body {
	background-color: lightgrey;	
}
.menu a:visited {
	color: black;
}

.showlist li {
	margin-bottom: 15px;
	margin-right: 10px;
}

.sidebar h2 {
	text-align: center;
}s

.sidebar {
	display: flex;
	justify-content: left;
	flex-direction: column;
	height: auto;
	border-right: 4px solid;
	width: auto;
}

h1 {
	display: flex;
	justify-content: space-evenly;
	border: 4px solid;
	text-decoration: underline;
	font-size: 50px;
	margin: auto;
}

h1 :first-child {
	border-right: 4px solid;
	padding-right: 225px;
}

h2 {
	text-decoration: underline;
}

footer, header {
	background: rgb(255, 20, 20);
}

footer p{
	margin: auto;
	padding: 24.5px 5px 24.5px 5px;
}

footer {
	height: 67px;
}

/* Manage.html styles */

.manage_wrapper {
	display: flex;
	justify-content: space-between;
	height: auto;
}

.showlist {
	display: flex;
	flex-direction: column;
	list-style-type: none;
	padding: 0px;
}

.deletebutton{
	background: darkgrey;
	color: red;
	border-radius: 50%;
	margin-left: 10px;
}

.textfields div:nth-of-type(2) input {
	min: 1; 
	max: 5;
	width: 127px;
}

.manage_content h2 {
	margin-bottom: 20px;
	margin-left: 50px;
	
}

.manage_wrapper .content {
	display: flex;
	justify-content: center;
	flex-direction: column;
    margin-right: 400px;
}

.textfields {
	margin-top: 30px;
	
}

.textfields * {
	margin-bottom: 10px;
}


.textfields div:nth-of-type(1) input {
	margin-left: 80.83px;
}

.textfields div label {
	font-size: 30px;
}

.textfields div:nth-of-type(2) input{
	margin-left: 72.45px;
}

.textfields div:nth-of-type(3) input {
	margin-left: 10px;
}

.textfields button {
	margin-left: 90px;
}


/* preview.html styles */

.preview_wrapper {
	display: flex;
	justify-content: space-between;
	height: auto;
}

.preview_wrapper .content_left img {
	width: 691.2px;
	height: 440px; 
}

.preview_wrapper .content_left {
	display: flex;
	flex-direction: column;
	height: 1000px;
}

.preview_wrapper .content_right {
	margin-right: 80px;
}


